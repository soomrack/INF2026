#include <stdio.h>

int main()
{
int year = 2026;
int month = 2;

int salary = 100'001;
int capital = 0;
// for (int mounth = 1; month < 25; ++month){ // ++mounth ; mounth++ ; month = month + 1
// while ( year != 2027 || month != 2){
while ( !(year == 2027 && month == 2)) {
    if (month == 3){
        salary = (salary * 1.5);
    }

    capital += salary;
    
    ++month;
    if (month == 13){
        ++year;
        month = 1;
    }
}
printf("Salary = %d\n", salary);
printf("Capital = %d", capital);
}
