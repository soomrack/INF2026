#include <iostream>
using namespace std;
int main()
{
    int salary = 100001;
    int capital = 0;

    int year = 2026;
    int month = 2;

    while (!(year == 2027 && month == 2)){
        if (month == 3){
            salary *= 1.5;
        }
        capital += salary;
        ++month;
        if (month == 13) {
            ++year;
            month = 1;
        }
    }
    printf("Salary =%d\n", salary);
    cout << "Capital = " << capital<<endl;
